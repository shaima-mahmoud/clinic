<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
		<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/clinic</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">root</property>
		
		<mapping class="com.clinic.entity.Prescription" />
		<mapping class="com.clinic.entity.Specialization" />
		<mapping class="com.clinic.entity.User" />
		<mapping class="com.clinic.entity.Patient" />
		<mapping class="com.clinic.entity.Doctor" />
		<mapping class="com.clinic.entity.DoctorAvailability" />
		<mapping class="com.clinic.entity.Message" />
		<mapping class="com.clinic.entity.Reservation" />
		
		
	</session-factory>


</hibernate-configuration>
